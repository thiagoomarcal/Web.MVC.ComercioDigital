@model IEnumerable<Web.MVC.ComercioDigital.Models.Pedido>

@{
    ViewBag.Title = "Pedidos";
}

<h3>Lista de Pedidos</h3>

<p>
    @Html.ActionLink("Adicionar Novo Pedido", "NovoPedido")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Numero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeCliente)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @*@Html.ActionLink(item.Id.ToString(), "Details", new { id = item.Id })*@
                @Html.ActionLink(item.Id.ToString(), "Detalhes", "ItensPedido", new { pedidoId = item.Id }, null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCliente)
            </td>
            <td>
                @Html.ActionLink("Incluir Item", "NovoItem", "ItensPedido", new { pedidoId = item.Id }, null) |
                @Html.ActionLink("Alterar", "AtualizaPedido", new { id = item.Id }) |
                @Html.ActionLink("Excluir", "ExcluiPedido", new { id = item.Id })
            </td>
        </tr>
    }

</table>