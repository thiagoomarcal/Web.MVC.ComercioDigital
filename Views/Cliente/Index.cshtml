@model IEnumerable<Web.MVC.ComercioDigital.Models.Cliente>

@{
    ViewBag.Title = "Clientes";
}

<h3>Lista de Clientes</h3>

<p>
    @Html.ActionLink("Adicionar Novo Cliente", "NovoCliente")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.ActionLink("Alterar", "AtualizaCliente", new { id = item.Id }) |
                @Html.ActionLink("Excluir", "ExcluiCliente", new { id = item.Id })
            </td>
        </tr>
    }

</table>